@model DominoesWithCompadres.Models.ViewModel.JoinGame

@Html.ValidationSummary()
@using (Html.BeginForm("Join", "Game", FormMethod.Post))
{
    @Html.LabelFor(model => model.GameCode)
    @Html.TextBoxFor(model => model.GameCode)
    @Html.ValidationMessageFor(model => model.GameCode, "*")
    <br />
    @Html.TextBoxFor(model => model.UserDisplayName)
    <br />
    bool first = true;
    foreach (string value in Enum.GetNames(typeof(DominoesWithCompadres.Models.ViewModel.UserType)))
    {
        @Html.Label(value)
        if (first)
        {
            @Html.RadioButtonFor(model => model.UserType, value, new Dictionary<string, object>() { { "checked", "checked" } })
            first = false;
        }
        else
        {
            @Html.RadioButtonFor(model => model.UserType, value)
        }
    }
    <br />
    <input type="submit" value="Create" />
}