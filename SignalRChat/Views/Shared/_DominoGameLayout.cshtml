<!DOCTYPE html >
<html ng-app="dominoGameApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="debugConsole">
        <ul>
            <li><a href="#debug_consoleViewer">Console</a></li>
            <li><a href="#debug_playedTiles">PlayedTiles</a></li>
            <li><a href="#debug_viewModel">View Model</a></li>
        </ul>
        <div id="debug_consoleViewer"></div>
        <div id="debug_playedTiles">
            <table class="debug_playedTiles_table" data-bind="foreach: playedTiles">
                <tr>
                    <td>
                        id: <span data-bind="text: id"></span>
                    </td>
                    <td>
                        value 1: <span data-bind="text: value1"></span>
                    </td>
                    <td>
                        value 2: <span data-bind="text: value2"></span>
                    </td>
                </tr>
            </table>
        </div>
        <div id="debug_viewModel"></div>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dominoes", "Index", "Home", null, new { @class = "navbar-brand" })
                @if (DominoesWithCompadres.Utils.SiteSettings.DebugConsole)
                {
                    <div id="toggleDebugConsoleContainer"><a href="#" id="btnToggleDebugConsole">Show console</a></div>
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr class="hideIfMobile" />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @if (DominoesWithCompadres.Utils.SiteSettings.DebugConsole)
    {
        <script>
            var debugConsoleEnabled = true;
        </script>
    }
    else
    {
        <script>
            var debugConsoleEnabled = false;
        </script>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
